page{
    height: 100%;
    background-color: #f2f2f2;
}

/*用户信息*/
.user-info-container{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 400rpx;
    background-color: #1296db;
    padding-left: 50rpx;
    padding-right: 50rpx;
}
.user-avatar{
    height:160rpx;
    width: 160rpx;
    border-radius: 50%;
}

.user-nickname{
    color: white;
    font-size: 40rpx;
}

.user-desc{
    color: white;
    font-size: 30rpx;
    margin-top: 30rpx;
}

