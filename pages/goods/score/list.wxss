page{
    height: 100%;
    background-color: #F5F5F5;
}

.score-box{
    display: flex;
    flex-direction: column;
    background-color: white;
    padding: 30rpx;
    border-bottom: 1px solid #EDEDED;
}

.header-box{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.info-box{
    display: flex;
    flex-direction: row;
    flex: 1;
}

.info-box .avatar{
    height: 70rpx;
    width: 70rpx;
    border-radius: 50%;
    vertical-align: middle;
}

.info-box .username{
    font-size:28rpx;
    color: #262626;
}

.info-box .date{
    font-size:26rpx;
    color: #A3A3A3;
}

.name-box{
    display: flex;
    flex-direction: column;
    margin-left: 20rpx;
}

.star-box image{
    height: 40rpx;
    width: 40rpx;
    vertical-align: middle;
}

.content-box{
    padding-left: 90rpx;
    margin-top: 20rpx;
    font-size: 28rpx;
    color: #262626;
}