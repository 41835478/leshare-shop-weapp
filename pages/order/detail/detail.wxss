@import "/templates/address/show/address-show-template.wxss";
@import "/templates/order/item/order-item-template.wxss";

page{
    height: 100%;
    background-color: #F5F5F5;
}

.container{
    display: flex;
    flex-direction: column;
}

/*状态栏*/
.order-status-bar{
    background-color: #FFF;
    height: 70rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 40rpx 30rpx;
}

/*状态描述*/
.order-status-container{
    display: flex;
    flex-direction: column;
    margin-left: 30rpx;
}

/*状态图标*/
.order-status-icon{
    height: 60rpx;
    width: 60rpx;
    vertical-align: middle;
}

/*状态文本*/
.order-status-text{
    font-size: 33rpx;
    color: #262626;
}
.order-status-desc{
    font-size: 28rpx;
    margin-top: 10rpx;
    color: #A3A3A3;
}
/*地址与状态的间隔*/
.status-address-gap{
    height: 1px;
    width: 100%;
    background-color: #E7E7E7;
}
/*收货地址间隔*/
.address-hr{
    width: 100%;
    height: 5px;
    margin-bottom: 15rpx;
}

/*买家留言*/
.trade-note-container{
    background-color: #FFF;
    margin-left: 20rpx;
    display: flex;
    padding:0 10rpx 20rpx 10rpx;
    flex-direction: column;
}
.text-bar{
    height: 60rpx;
}

.text-major{
    line-height: 60rpx;
}

/*订单明细*/
.order-detail-container{
    background-color: #FFF;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    padding: 20rpx;
}

.order-detail-key-container{
    display: flex;
    flex-direction: column;
    text-align: right;
    margin-right: 20rpx;
}
.order-detail-container text{
    height: 40rpx;
    line-height: 40rpx;
}

.order-detail-value-container{
    display: flex;
    text-align: left;
    flex-direction: column;
    flex-grow: 1;
}