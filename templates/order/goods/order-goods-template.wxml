<!--订单商品模板 -->
<!--依赖：无-->
<!--输入：...goods-->
<template name="orderGoodsTemplate">
    <view class="order-goods-container">
        <!--商品图片-->
        <image class="order-goods-image" src="/images/goods/goods.jpeg"/>
        
        <!--商品说明-->
        <text class="order-goods-title">{{name}}</text>

        <!--商品购买信息-->
        <view class="order-goods-buy-container">
            <text class="order-goods-price">￥{{sell_price}}</text>
            <text class="order-goods-count">x1</text>
        </view>
    </view>
</template>