<!-- 地址项目模板-->
<!--依赖：无-->
<template name="addressItemTemplate">
    <view class="address-item-container">
        <!--左侧图标-->
        <view class="address-icon-container">
            <image class="icon-middle" src="/images/icons/address.png"/>
        </view>
        <!-- 地址内容 -->
        <view class="address-info-container">
            <view class="address-name-phone-container">
                <text class="address-info-name">张三</text>
                <text class="address-info-phone">13700000000</text>
                <view class="address-default-label zan-label zan-label--primary zan-label--small zan-label--plain">默认</view>
            </view>
            <view class="address-detail-container">
                <text class="address-info-detail">福建省福州市马尾区马尾镇新大陆科技园</text>
            </view>
        </view>
        
        <!--右侧图标-->
        <image class="icon-middle" src="/images/icons/more.png"/>
    </view>
</template>