<!-- 优惠券项目-->
<!--依赖：无-->
<template name="couponItemTemplate">
    <view class="coupon-item-container">
        <!--左侧区域-->
        <view class="coupon-main-container">
            <view class="coupon-value-container">
                <text class="coupon-value-unit">￥</text>
                <text class="coupon-value-text">50</text>
            </view>
            <text class="coupon-limit-text">满88元可用</text>
        </view>

        <!--右侧区域-->
        <view class="coupon-info-container">
            <view>
                <view class="coupon-title-container">
                    <view class="zan-label zan-label--primary zan-label--small">现金</view>
                    <text class="coupon-title-text">烤鸭大减价，全场商品可用</text>
                </view>
                <text class="coupon-time-text">2017.06.06-2017.06.06</text>
            </view>


            <!--分隔符-->
            <view>
                <view class="coupon-desc-gap"></view>
                <view class="coupon-detial-container">
                    <text class="coupon-detial-text">详细信息</text>
                    <image class="coupon-detial-icon" src="/images/icons/down.png" />
                </view>
            </view>
        </view>
        <image class="coupon-new-icon" src="/images/icons/new.png" />
    </view>
</template>