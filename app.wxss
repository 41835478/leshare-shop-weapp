/*数量选择器*/
.zan-quantity {
  color: #666;
}
.zan-quantity view {
  display: inline-block;
  line-height: 20px;
  padding: 4px 0;
  text-align: center;
  min-width: 30px;
  box-sizing: border-box;
  vertical-align: middle;
  font-size: 12px;
  border: 1rpx solid #999;
}
.zan-quantity .zan-quantity__minus {
  border-right: none;
  border-radius: 2px 0 0 2px;
}
.zan-quantity .zan-quantity__text {
  border: 1rpx solid #999;
  display: inline-block;
  text-align: center;
  vertical-align: middle;
  height: 30px;
  width: 30px;
  font-size: 12px;
  line-height: 30px;
}
.zan-quantity .zan-quantity__plus {
  border-left: none;
  border-radius: 0 2px 2px 0;
}
.zan-quantity .zan-quantity--disabled {
  background: #f8f8f8;
  color: #bbb;
  border-color: #e8e8e8;
}
.zan-quantity--small view {
  min-width: 30px;
  line-height: 18px;
}
.zan-quantity--small .zan-quantity__text {
  width: 30px;
  line-height: 26px;
  height: 26px;
}
