
/*全局字体*/
text {
  font-family: MicroSoft Yahei;
  font-size: 24rpx;
  color: #666;
}
.text-major{
    color: #333;
}
/*水平线线*/
.hr{
    height: 1px;
    background-color: #d9d9d9;
    width: 100%;
}
/*水平线线*/
.hr-light{
    height: 1px;
    background-color: #e6e6e6;
    width: 100%;
}
/*间隙*/
.gap{
    margin-top: 10rpx;
    margin-bottom: 10rpx;
}

/*更多*/
.icon-big{
    width: 60rpx;
    height: 60rpx;
}

/*更多*/
.icon-middle{
    width: 45rpx;
    height: 45rpx;
}

/*文本区域*/
.textarea{
    height: 150rpx;
    width: 700rpx;
    border: #e6e6e6 solid 1px;
    border-radius: 5px;
    padding: 10rpx;
    margin-left: auto;
    margin-right: auto;
    font-family: MicroSoft Yahei;
    font-size: 24rpx;
    color: #666;
}

/*操作按钮*/
.btn-box{
    padding: 10rpx;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    background-color: #FFF;
}
.btn-box .btn{
    margin-left: 10rpx;
}
.btn{
    border: #e6e6e6 solid 1px;
    border-radius: 5px;
    font-size: 24rpx;
    padding: 15rpx 20rpx;
    height: auto;
}
.btn.btn-primary{
    background-color: #1296db;
    color: #FFF;
}
.btn.btn-warn{
    background-color: #ffbe00;
    color: #FFF;
}

/*列表样式*/
.list-item{
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    height: 55rpx;
    padding: 10rpx 20rpx;
}
.list-item-title{
    width: 130rpx;
    margin-right: 20rpx;
    text-align: right;
}
.list-item-value{
    color: #333;
    flex-grow: 1;
}
.list-item-icon{
    width: 45rpx;
    height: 45rpx;
}
